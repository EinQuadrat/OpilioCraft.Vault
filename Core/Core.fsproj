<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>

    <PackageId>OpilioCraft.Vault.Core</PackageId>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>Carsten Schäfer</Authors>
    <Description>Implements a digital vault, supporting digital assets.</Description>
    <Copyright>Copyright (c) 2023 by Carsten Schäfer</Copyright>
    <RepositoryUrl>https://github.com/EinQuadrat/OpilioCraft.Vault.git</RepositoryUrl>
    <PackageTags>OpilioCraft;FSharp</PackageTags>

    <AssemblyName>OpilioCraft.Vault.Core</AssemblyName>
    <RootNamespace>OpilioCraft.Vault.Core</RootNamespace>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DebugType>portable</DebugType>
    <RunAnalyzersDuringBuild>True</RunAnalyzersDuringBuild>
    <RunAnalyzersDuringLiveAnalysis>True</RunAnalyzersDuringLiveAnalysis>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Settings.fs" />
    <Compile Include="Model.fs" />
    <Compile Include="UserSettings.fs" />
    <Compile Include="Backend.fs" />
    <Compile Include="CachingBackend.fs" />
    <Compile Include="VaultHandler.fs" />
    <Compile Include="VaultManager.fs" />
    <Compile Include="VaultOperations.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpilioCraft" Version="1.0.0" />
    <PackageReference Include="OpilioCraft.FSharp.Prelude" Version="5.0.1" />
  </ItemGroup>

</Project>
